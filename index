<body>

<div id="app-container">
    <div class="version">v2.3.2 (All-In-One)</div>
    
    <button id="toggle-shift-btn" class="btn-start" onclick="handleShiftToggle()">‚ñ∂ ALOITA TY√ñVUORO</button>

    <div class="dashboard">
        <div class="stat-card">
            <div class="stat-label">Ty√∂aika</div>
            <div id="timer-display" class="stat-value">00:00</div>
        </div>
        <div class="stat-card">
            <div class="stat-label">Yhteens√§</div>
            <div id="total-units" class="stat-value">0</div>
        </div>
    </div>

    <div id="main-ui">
        <div id="interactive"></div>
        <button id="scan-btn" onclick="toggleCam()">üì∑ SKANNAA TY√ñKORTTI</button>

        <div class="input-box">
            <label>Ty√∂kortin ID (6 numeroa):</label>
            <input type="text" id="work-id" oninput="validateID()" maxlength="6" inputmode="numeric" placeholder="------">
        </div>

        <div class="input-box">
            <label>Valmistetut yksik√∂t:</label>
            <input type="number" id="current-units" placeholder="Sy√∂t√§ m√§√§r√§...">
            <button onclick="submitEntry()" style="margin-top:10px; background:#007bff; color:white; border:none; padding:10px; width:100%; border-radius:8px; font-weight:bold;">TALLENNA ER√Ñ</button>
        </div>

        <div id="history-list">
            <b>Viimeisimm√§t kirjaukset:</b>
            <div id="history-items"></div>
        </div>

        <button id="reset-link" onclick="askReset()">Haluatko varmasti nollata koko jakson historian</button>
    </div>
</div>

<script>
    let shiftActive = false;
    let startTime;
    let timerInterval;
    let camActive = false;
    let totalUnits = 0;
    let history = [];

    // 1. KIRJAUSLOGIIKKA
    function validateID() {
        const idInput = document.getElementById('work-id');
        idInput.value = idInput.value.replace(/\D/g, '');
        if (idInput.value.length === 6) {
            idInput.classList.add('success');
            playBeep(1200, 0.1);
            document.getElementById('current-units').focus();
        } else {
            idInput.classList.remove('success');
        }
    }

    function submitEntry() {
        const id = document.getElementById('work-id').value;
        const units = parseInt(document.getElementById('current-units').value);

        if (id.length === 6 && !isNaN(units) && units > 0) {
            totalUnits += units;
            history.unshift({id, units, time: new Date().toLocaleTimeString([], {hour: '2-digit', minute:'2-digit'})});
            
            updateUI();
            saveData();
            
            // Tyhjennys uutta varten
            document.getElementById('work-id').value = '';
            document.getElementById('current-units').value = '';
            document.getElementById('work-id').classList.remove('success');
            document.getElementById('work-id').focus();
        } else {
            alert("Tarkista ID (6 numeroa) ja m√§√§r√§!");
        }
    }

    function updateUI() {
        document.getElementById('total-units').innerText = totalUnits;
        const list = document.getElementById('history-items');
        list.innerHTML = history.slice(0, 5).map(item => `
            <div class="history-item">
                <span>ID: ${item.id}</span>
                <span><b>${item.units} kpl</b></span>
                <span style="color:#999">${item.time}</span>
            </div>
        `).join('');
    }

    // 2. TY√ñVUORO
    function handleShiftToggle() {
        if (!shiftActive) {
            startShift();
        } else {
            if (confirm("Lopetetaanko ty√∂vuoro?")) stopShift();
        }
    }

    function startShift() {
        shiftActive = true;
        playBeep(880, 0.4);
        const btn = document.getElementById('toggle-shift-btn');
        btn.innerText = "‚ñ† LOPETA VUORO";
        btn.className = "btn-stop";
        document.getElementById('main-ui').classList.add('active');
        startTime = Date.now();
        timerInterval = setInterval(updateTimer, 1000);
        loadSaved();
    }

    function stopShift() {
        shiftActive = false;
        clearInterval(timerInterval);
        const btn = document.getElementById('toggle-shift-btn');
        btn.innerText = "‚ñ∂ ALOITA TY√ñVUORO";
        btn.className = "btn-start";
        document.getElementById('main-ui').classList.remove('active');
        if(camActive) toggleCam();
    }

    function updateTimer() {
        const diff = Date.now() - startTime;
        const m = Math.floor(diff / 60000);
        const s = Math.floor((diff % 60000) / 1000);
        document.getElementById('timer-display').innerText = `${m.toString().padStart(2, '0')}:${s.toString().padStart(2, '0')}`;
    }

    function playBeep(freq, duration) {
        const audioCtx = new (window.AudioContext || window.webkitAudioContext)();
        const osc = audioCtx.createOscillator();
        osc.frequency.setValueAtTime(freq, audioCtx.currentTime);
        osc.connect(audioCtx.destination);
        osc.start();
        osc.stop(audioCtx.currentTime + duration);
    }

    // 3. KAMERA JA MUISTI
    function toggleCam() {
        const div = document.getElementById('interactive');
        if (camActive) {
            Quagga.stop();
            div.style.display = 'none';
            camActive = false;
        } else {
            div.style.display = 'block';
            Quagga.init({
                inputStream: { name: "Live", type: "LiveStream", target: div, constraints: { facingMode: "environment" } },
                decoder: { readers: ["code_128_reader", "ean_reader"] }
            }, (err) => {
                if(err) { alert("Kamera-virhe."); return; }
                Quagga.start();
                camActive = true;
            });
        }
    }

    Quagga.onDetected((data) => {
        document.getElementById('work-id').value = data.codeResult.code.replace(/\D/g, '').substring(0,6);
        validateID();
        toggleCam();
    });

    function saveData() {
        localStorage.setItem('work_data_v232', JSON.stringify({totalUnits, history}));
    }

    function loadSaved() {
        const saved = localStorage.getItem('work_data_v232');
        if (saved) {
            const data = JSON.parse(saved);
            totalUnits = data.totalUnits || 0;
            history = data.history || [];
            updateUI();
        }
    }

    function askReset() {
        if (confirm("Haluatko varmasti nollata koko jakson historian?")) {
            localStorage.removeItem('work_data_v232');
            location.reload();
        }
    }
</script>

</body>
</html>
