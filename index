<body>

<div id="app-container">
    <div class="version">v2.2.8</div>
    
    <button id="toggle-shift-btn" class="btn-start" onclick="handleShiftToggle()">‚ñ∂ ALOITA TY√ñVUORO</button>

    <div id="timer-display">00:00:00</div>

    <div id="main-ui">
        <div id="interactive"></div>

        <div class="control-group">
            <label>Ty√∂kortin ID:</label>
            <input type="text" id="work-id" oninput="saveData()" placeholder="Skannattu koodi...">
            <button id="scan-btn" onclick="toggleCam()">üì∑ SKANNAA VIIVAKOODI</button>
        </div>

        <div class="control-group">
            <label>Valmistetut yksik√∂t:</label>
            <input type="number" id="units" oninput="saveData()" placeholder="0">
        </div>

        <button id="reset-link" onclick="askReset()">Haluatko varmasti nollata koko jakson historian</button>
    </div>
</div>

<script>
    let shiftActive = false;
    let startTime;
    let timerInterval;
    let camActive = false;

    function handleShiftToggle() {
        if (!shiftActive) {
            startShift();
        } else {
            if (confirm("Lopetetaanko ty√∂vuoro?")) {
                stopShift();
            }
        }
    }

    function startShift() {
        shiftActive = true;
        playStartBeep();
        
        const btn = document.getElementById('toggle-shift-btn');
        btn.innerText = "‚ñ† LOPETA VUORO";
        btn.className = "btn-stop";
        
        document.getElementById('main-ui').className = "active";
        
        startTime = Date.now();
        timerInterval = setInterval(updateTimer, 1000);
        loadSaved();
    }

    function stopShift() {
        shiftActive = false;
        clearInterval(timerInterval);
        
        const btn = document.getElementById('toggle-shift-btn');
        btn.innerText = "‚ñ∂ ALOITA TY√ñVUORO";
        btn.className = "btn-start";
        
        document.getElementById('main-ui').className = "";
        if(camActive) toggleCam();
    }

    function playStartBeep() {
        const audioCtx = new (window.AudioContext || window.webkitAudioContext)();
        const osc = audioCtx.createOscillator();
        osc.type = 'sine';
        osc.frequency.setValueAtTime(880, audioCtx.currentTime);
        osc.connect(audioCtx.destination);
        osc.start();
        osc.stop(audioCtx.currentTime + 0.4);
    }

    function updateTimer() {
        const diff = Date.now() - startTime;
        const h = Math.floor(diff / 3600000);
        const m = Math.floor((diff % 3600000) / 60000);
        const s = Math.floor((diff % 60000) / 1000);
        document.getElementById('timer-display').innerText = 
            `${h.toString().padStart(2, '0')}:${m.toString().padStart(2, '0')}:${s.toString().padStart(2, '0')}`;
    }

    function toggleCam() {
        const div = document.getElementById('interactive');
        if (camActive) {
            Quagga.stop();
            div.style.display = 'none';
            camActive = false;
        } else {
            div.style.display = 'block';
            Quagga.init({
                inputStream: { name: "Live", type: "LiveStream", target: div, constraints: { facingMode: "environment" } },
                decoder: { readers: ["code_128_reader", "ean_reader"] }
            }, (err) => {
                if(err) { alert("Kamera-virhe."); return; }
                Quagga.start();
                camActive = true;
            });
        }
    }

    Quagga.onDetected((data) => {
        document.getElementById('work-id').value = data.codeResult.code;
        saveData();
        toggleCam();
    });

    function saveData() {
        const d = { id: document.getElementById('work-id').value, units: document.getElementById('units').value };
        localStorage.setItem('shift_v228', JSON.stringify(d));
    }

    function loadSaved() {
        const saved = localStorage.getItem('shift_v228');
        if (saved) {
            const data = JSON.parse(saved);
            document.getElementById('work-id').value = data.id || '';
            document.getElementById('units').value = data.units || '';
        }
    }

    function askReset() {
        if (confirm("Haluatko varmasti nollata koko jakson historian?")) {
            localStorage.removeItem('shift_v228');
            location.reload();
        }
    }
</script>

</body>
</html>
